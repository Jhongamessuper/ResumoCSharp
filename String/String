//Variáveis do tipo string são usadas para armazenar textos que pode conter caracteres entre aspas DUPLAS

Exemplo:

//Variáveis pessoa e eu do tipo string que estão recebendo palavras
string pessoa = "Olá quem é você?";  
string eu = "Oi meu nome é Otávio Mesquita";
string pessoa = "Mentira você acha que sou burro";
string eu = "Acho kkkkk";

//Uma string  é um objeto, que contém propriedades e que podem realizar certas operações como encontrar o comprimento dela pelo comando Length

Exemplo:

//Variável txt do tipo string que está recebendo caracteres e está mostrando na tela o comprimento dos caracteres
string txt = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
Console.WriteLine("O comprimento da string txt é: " + txt.Length);
string txt = "Oi meu amigo querido";
Console.WriteLine("O comprimento da string txt é: " + txt.Length);
string txt = "Eu vi você ontem";
Console.WriteLine("O comprimento da string txt é: " + txt.Length);
string txt = "Não quero";
Console.WriteLine("O comprimento da string txt é: " + txt.Length);

//Existem muitos métodos de string, como ToUpper()e ToLower(), que mostra uma cópia da string convertida para maiúscula ou minúscula:

Exemplo:

//Variável txt do tipo string vai receber palavras e vai mostrar na tela maiúcula(ToUpper) e minúscula(ToLower)
string txt = "Rpg é muito bom";
Console.WriteLine(txt.ToUpper());
Console.WriteLine(txt.ToLower());
string txt = "Não gosto disso";
Console.WriteLine(txt.ToUpper());  
Console.WriteLine(txt.ToLower());
string txt = "Estudo";
Console.WriteLine(txt.ToUpper());  
Console.WriteLine(txt.ToLower());
string txt = "Olha para cima";
Console.WriteLine(txt.ToUpper());  
Console.WriteLine(txt.ToLower());

//O +operador pode ser usado entre as strings para concatenar(juntá-las)

Exemplo:

//Variáveis do tipo string n vai receber Não, s vai receber Sim, pergunta vai receber Quer isso mesmo e escoha vai receber variável s concatenada com espera e variável n
string n = "Não";
string s = "Sim";
string pergunta = "Quer isso mesmo";
string escolha = s + "espera" + n;

//Também podemos concatenar variáveis com comando Concat

Exemplo:

string n = "Não";
string s = "Sim";
string pergunta = "Quer isso mesmo";
string escolha = string.Concat(s ," Espera ", n);  //Só mudou o comando + para o Concat e ,
txtCaracter.Text = escolha;

//Interpolação de strings substitui valores de variáveis ​​em espaços reservados em uma string

Exemplo:


string n = "Não";
string s = "Sim";
string pergunta = "Quer isso mesmo";
string escolha = string.Concat(s ," Espera ", n); 
txtCaracter.Text = escolha;


