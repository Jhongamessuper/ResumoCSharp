//O comando Console.ReadLine() retorna uma string. Não pode obter informações de outro tipo de dados, como int mais podemos converter se preciso

Exemplo:

using System;

namespace MyApplication
{
  class Program
  {
    static void Main(string[] args)
    {
      Console.WriteLine("Digite o nome de usuário:");  //Digite seu nome de usuário e pressione enter

      string nomeDeUsuario = Console.ReadLine();  //Cria uma variável string que obtem a entrada do usuário do teclado e armazene-a na variável

      Console.WriteLine("O nome de usuário é: " + nomeDeUsuario);  //Pega o valor da variável (nomeDeUsuario), e exibe na tela
    }
  }
}

//Para converter explicitamente pode-se usar um dos comandos Convert.To

Exemplo:

Console.WriteLine("Digite sua idade:");  //Digite sua idade e precione enter
int idade = Convert.ToInt32(Console.ReadLine());  //Quando o usuário digitar a idade o valor que ele colocou vai ser convertida em inteiro e a variável do tipo inteiro chamada idade vai receber o valor que foi especificado
Console.WriteLine("Sua idade é: " + idade);  //Irá fazer com que o valor seja mostrado na tela